<html>
<% include header %>

<h1>BTC USD Converter</h1>
<input type="text" id="btc" value="1" onkeyup="btcusd();" oncChange="btcusd();">
<input type="text" id="usd" value="<%= btcPrice %>" onkeyup="usdbtc();" oncChange="usdbtc();">
<script type="text/javascript">
	function btcusd() {
		var market_price = <%= btcPrice %>;
		var btc_value = document.getElementById("btc").value;
		var calc = btc_value * market_price;
		document.getElementById("usd").value = calc.toFixed(2);
	};

	function usdbtc() {
		var market_price = <%= btcPrice %>;
		var usd_value = document.getElementById("usd").value;
		var calc = usd_value / market_price;
		document.getElementById("btc").value = calc.toFixed(8);
	};
</script>
</html>